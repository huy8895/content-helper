{
  "manifest_version": 3,
  "name": "Content Helper - AI Workflow Assistant",
  "version": "1.0.1",
  "description": "Simplify your AI workflow on ChatGPT, Google AI Studio, and DeepSeek. Automate scenarios, split text, and download audio easily.",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "assets/icon.png"
  },
  "icons": {
    "16": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "permissions": [
    "identity",
    "storage",
    "activeTab",
    "scripting",
    "webRequest",
    "downloads",
    "notifications"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://aistudio.google.com/*",
    "https://studio.youtube.com/*",
    "https://chat.deepseek.com/*",
    "https://chat.qwen.ai/*",
    "https://grok.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.deepseek.com/*",
        "https://chat.qwen.ai/*",
        "https://grok.com/*",
        "https://aistudio.google.com/*",
        "https://studio.youtube.com/video/*"
      ],
      "js": [
        "libs/tailwind.min.js",
        "libs/jszip.min.js",
        "libs/compromise.min.js",
        "libs/firebase-app-compat.js",
        "libs/firebase-firestore-compat.js",
        "content/SRTAutomationPanel.js",
        "content/GoogleAIStudioPanel.js",
        "content/YoutubeStudioPanel.js",
        "content/chatgpt-helper.js",
        "content/firestore-helper.js",
        "content/PanelState.js",
        "content/PromptSequencer.js",
        "content/ScenarioBuilder.js",
        "content/ScenarioRunner.js",
        "content/TextSplitter.js",
        "content/AudioDownloader.js",
        "content/ContentCopyPanel.js",
        "content/ChatAdapter.js"
      ],
      "css": [
        "content/chatgpt-helper.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "oauth2": {
    "client_id": "517231603315-unill9qgp7iq7f9evp7l9h2mk676kc4u.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none';"
  }
}